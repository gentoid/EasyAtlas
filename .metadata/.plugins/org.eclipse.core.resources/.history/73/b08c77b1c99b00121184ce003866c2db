package ru.osm.dkiselev.atlasgenerator;

import static java.lang.Math.cos;
import static java.lang.Math.toRadians;

public class Calculator {
	
	public static Point addOffset(Point p, double de, double dn)
	{
		//Position, decimal degrees
		double lat = p.getLat();
		double lon = p.getLon();

		int METERS_IN_DEGREE = 111111;
		return new Point(lon + dn * METERS_IN_DEGREE * cos(toRadians(lat)), lat + de * METERS_IN_DEGREE);
	}
}
